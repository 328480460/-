/**app.wxss**/

page {
    background: #ededed;
    height: 100%;
}

.container {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.flex {
    display: flex;
    justify-content: center;
}

.flex-item {
    width: 100%;
    flex: 1;
}

.flex-item2 {
    flex: 2;
}

.flex-column {
    flex-direction: column;
    height: 100%;
}

.overflow {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.pull-left {
    text-align: left;
}

.pull-center {
    display: block;
    text-align: center;
}

.pull-right {
    text-align: right;
}

.footer-tab {
    position: fixed;
    bottom: 0;
    left: 0;
    height: 98rpx;
    width: 100%;
    background: #fff;
}

.footer-tab .tba {
    display: table;
    width: 100%;
    height: 100%;
    table-layout: fixed;
}

.footer-tab .tba-item {
    display: table-cell;
    height: 100%;
    vertical-align: middle;
    text-align: center;
    /*align-items: center;*/
    color: #bbbbbb;
}

.footer-tab .tba-item.active {
    color: #22a438;
}

.footer-tab .text {
    display: block;
    font-size: 24rpx;
}

.footer-tab .icont {
    display: inline-block;
    margin-bottom: 5rpx;
    font-size: 46rpx;
}

.footer {
    margin-bottom: 32rpx;
    color: #22a438;
    font-size: 28rpx;
    text-align: center;
}

.footer .iconfont {
    font-size: 28rpx;
    margin-right: 12rpx;
}

.block {
    display: block;
}

.inblock {
    display: inline-block;
}

.swiper-box {
    position: relative;
    width: 100%;
    height: 100%;
}

.logo {
    vertical-align: top;
    height: 202rpx;
    width: 190rpx;
}

.no-data {
    display: block;
    margin-top: 20px;
    font-size: 26rpx;
    color: #727272;
    text-align: center;
}

@font-face {
    font-family: "iconfont";
    src: url('//at.alicdn.com/t/font_265jrfjpxcx47vi.eot?t=1490776871334');
    src: url('//at.alicdn.com/t/font_265jrfjpxcx47vi.eot?t=1490776871334#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('//at.alicdn.com/t/font_265jrfjpxcx47vi.woff?t=1490776871334') format('woff'), /* chrome, firefox */
    url('//at.alicdn.com/t/font_265jrfjpxcx47vi.ttf?t=1490776871334') format('truetype'), /* chrome, firefox, opera, Safari, Android, iOS 4.2+*/
    url('//at.alicdn.com/t/font_265jrfjpxcx47vi.svg?t=1490776871334#iconfont') format('svg');
    /* iOS 4.1- */
}

.iconfont {
