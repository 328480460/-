.top-wapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    z-index: 10;
}

.top-wapper .search-wapper {
    height: 50rpx;
    line-height: 50rpx;
    padding: 15rpx 42rpx;
}

.search-wapper .flex {
    background: #e5e5e5;
    font-size: 26rpx;
    color: #727272;
    border-radius: 6rpx;
}

.search-wapper .iconfont {
    display: inline-block;
    width: 50rpx;
    text-align: center;
    vertical-align: middle;
    font-size: 26rpx;
}

.search-wapper input {
    vertical-align: bottom;
    height: 50rpx;
    line-height: 50rpx;
}

.tab-wapper {
    line-height: 50rpx;
    height: 50rpx;
    padding: 20rpx 0;
    border-top: 1px solid #ececec;
    border-bottom: 1px solid #ececec;
    text-align: center;
    color: #727272;
    font-size: 28rpx;
    table-layout: fixed;
}

.tab-wapper .flex-item {
    position: relative;
}

.tab-wapper .flex-item.active {
    color: #22a838;
}

.tab-wapper .flex-item:after {
    content: '';
    position: absolute;
    right: 0;
    top: 0rpx;
    width: 1px;
    background: #ececec;
    height: 50rpx;
}

.list-wapper {
    position: relative;
    background: #fff;
    width: 100%;
    height: 100%;
    overflow-y: scroll;
}

.list-wapper .blank {
    height: 170rpx;
}

.list-wapper .list-item {
    padding: 20rpx 35rpx 20rpx 35rpx;
    color: #727272;
    border-bottom: 1px solid #ececec;
}

.list-wapper .supplier-name {
    color: #232323;
    font-size: 30rpx;
}

.list-wapper .distance {
    font-family: Arial;
    font-size: 26rpx;
}

.list-wapper .supplier-address {
    display: block;
    margin-top: 14rpx;
    font-size: 26rpx;
}

.list-wapper .current-title {
  font-size: 28rpx;
  padding: 20rpx 30rpx;
   border-bottom: 1px solid #e5e5e5; 
  color: #232323;
  background-color: #f2f2f2;
}

.company-item {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
  color: #727272;
  font-size: 28rpx;
}

.company-item .top {
  align-items: center;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: flex-start;
}

.company-item .top .name {
  color: #232323;
  font-size: 34rpx;
  font-weight: 700;
}
.company-item .top  .trace-code-icon {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}
.company-item .top .name .keyword{
  color: red;
  display: inline;
}

.company-item .subtype-content {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 8rpx;
}
.company-item .subtype-content .left {
  display: flex;
  justify-content: flex-start;
  font-size: 24rpx;
}
.company-item .subtype-content .left .subtype {
  background-color: #f2f2f2;
  padding: 6rpx 10rpx; 
  border:1px solid #f2f2f2;
}
.company-item .subtype-content .left .traceability-type {
  background-color: transparent;
  box-sizing: padding-box;
  border:1px solid #f2f2f2;
  padding: 6rpx 10rpx; 
}
.company-item .bottom {
  display: flex;
  align-items: flex-start;
  
}
.company-item .bottom .location-icon{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 6rpx;
}
.company-item .bottom .address {
  margin-left: 6rpx;
}