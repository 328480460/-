/**index.wxss**/

.wapper {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.supplier-select {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #ececec;
    background: #fff;
    text-align: center;
    font-size: 30rpx;
    color: #727272;
}

.supplier-select .iconfont {
    font-size: 30rpx;
    color: #b6b6b6;
    margin-left: 12rpx;
    vertical-align: bottom;
    font-weight: bold;
}

.logo-wapper {
    padding: 50rpx 0 72rpx;
    background: #fff;
    text-align: center;
    border-bottom: 1rpx solid #ececec;
}

.logo-wapper .logo {
    vertical-align: top;
    height: 202rpx;
    width: 190rpx;
}

.handle-wapper {
    margin-top: 56rpx;
    text-align: center;
}

.handle-wapper image.tip {
    width: 572rpx;
    height: 72rpx;
    vertical-align: top;
}

.handle-wapper .txt {
    display: block;
    font-size: 30rpx;
    color: #22a438;
    letter-spacing: 1rpx;
    margin: 20rpx 0 12rpx;
}

.scan {
    width: 182rpx;
    height: 182rpx;
    vertical-align: top;
}

.handle-process {
    padding: 0 20px;
}

.flex-handle {
    margin: 30px 0;
    flex-direction: row;
    text-align: center;
}

.flex-handle .iconfont {
    font-size: 48px;
    color: #666;
}

.flex-handle .process-text {
    display: block;
    text-align: center;
    color: #666;
    font-size: 12px;
    margin-top: 5px;
}


/*我的*/

.jumbotron {
    position: relative;
    background: #22a438;
    width: 100%;
    height: 276rpx;
    text-align: center;
    margin-bottom: 36rpx;
}

.jumbotron .user-info {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 2;
}

.user-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.user-image {
    width: 120rpx;
    height: 120rpx;
    margin-top: 60rpx;
    border-radius: 50%;
    vertical-align: top;

}

.menu-list {
    background: #fff;
}

.menu-list .item {
    height: 106rpx;
    line-height: 106rpx;
    border-bottom: 1px solid #ececec;
    color: #232323;
    font-size: 30rpx;
}

.menu-list .iconfont {
    font-size: 30rpx;
    margin-left: 26rpx;
}

.menu-list .flex-item {
    margin-left: 20rpx;
}

.menu-list .icon-caret {
    color: #464646;
    margin-right: 28rpx;
}

.user-name {
    display: block;
    margin-top: 16rpx;
    color: #fff;
    font-size: 30rpx;
}

.index-blank {
    height: 120rpx;
}

.handle-tip {
    position: relative;
    display: inline-block;
    margin-top: 100rpx;
    font-size: 24rpx;
    height: 55rpx;
    line-height: 55rpx;
    background: #fff;
    padding: 0 38rpx;
    border-radius: 55rpx;
    color: #727272;
}

.handle-tip:before {
    content: '';
    position: absolute;
    left: 50%;
    bottom: -10rpx;
    margin-left: -10rpx;
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-top: 20rpx solid #fff;
    border-right: 10rpx solid transparent;
}

